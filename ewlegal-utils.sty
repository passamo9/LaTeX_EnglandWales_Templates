\newcommand{\tramlined}[1]
{%
\renewcommand\arrayrulewidth{1.1pt}
\begin{tabular}{@{\hspace{12pt}}c@{\hspace{12pt}}}
  \hline\\[-12pt]
  \MakeUppercase{#1}\\\ \\[-12pt]
  \hline
\end{tabular}
}

